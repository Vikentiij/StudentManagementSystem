@model SendMailDto
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container-fluid">
    <div class="row justify-content-center pt-4 pb-3 mb-4" style="background-color: #154c79;">
        <!-- #6f26d4-->
        <div class="col-md-6 text-center" mb-5>
            <h4 style="font-size: xx-large; color: white;">@ViewData["Title"]</h4>
        </div>
    </div>

    <h3>@ViewBag.Message</h3>

    <div class="row row justify-content-center">
        <div class="col-md-3 mt-3 mb-5">
            <h5 style=" color: #154c79; font-weight: 700">Contact info</h5>

            <div class="block" style="margin-top: 20px; justify-content: center; margin-right: 20px; line-height: 1.5;">
                <ul style="list-style-type: none; padding:0">
                    <li>
                        <div style="display: flex; flex: auto;">
                            <span class="bi bi-geo-alt-fill"style="margin-right:5px"></span>

                            <span class="text">
                                Level 3, 182 Broadway, Newmarket
                                Auckland NZ 1023
                            </span>
                        </div>
                    </li>
                    <li>
                        <span class="bi bi-envelope-fill"></span>
                        <span class="text">
                            Email: learn@techtorium.ac.nz
                        </span>
                    </li>
                    <li>
                        <span class="bi bi-telephone-fill"></span>
                        <span class="text">
                            Phone: 0800 529 7523
                        </span>
                    </li>

                </ul>

            </div>
        </div>
        <div class="col-md-6 mt-3 mb-5">
            <h4 style="color: #154c79; font-weight: 700; font: bold">Get in touch</h4>
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Enter your name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Subject"></label>
                    <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Enter your subject">
                    <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Message"></label>
                    <textarea rows="6" class="form-control" asp-for="@Model.Message" placeholder="Enter your message"></textarea>
                    <span class="text-danger" asp-validation-for="@Model.Message"></span>
                </div>
                <button type="submit" class="btn btn-primary">Send Mail</button>

            </form>
        </div>
    </div>
    </div>
