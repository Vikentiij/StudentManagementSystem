@model SendMailDto
@{
    ViewData["Title"] = "Email";
    Layout = "~/Views/Shared/DashboardLayout.cshtml";
}

<div class="container">
    <h1>@ViewBag.Message</h1>

    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Name">From</label>
            <input readonly type="text" asp-for="@Model.Name" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.RecipientName">To</label>
            <input readonly type="text" asp-for="@Model.RecipientName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="@Model.RecipientEmail">Email</label>
            <input readonly type="text" asp-for="@Model.RecipientEmail" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="@Model.Subject"></label>
            <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Enter your subject">
            <span class="text-danger" asp-validation-for="@Model.Subject"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Message"></label>
            <textarea class="form-control" asp-for="@Model.Message" placeholder="Enter your message"></textarea>
            <span class="text-danger" asp-validation-for="@Model.Message"></span>
        </div>
        <button type="submit" class="btn btn-primary">Send Mail</button>

    </form>

</div>